---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="cn-zh">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Crepus Villa" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/CRVL-TypeB.svg" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	.container {
    	width: 100%;
    	max-width: var(--container-max-width);
    	margin: 0 auto;
    	padding-left: var(--container-padding);
    	padding-right: var(--container-padding);
	}
	:root {
		--bg-color: #fbfbfd;
		--text-main: #1d1d1f;
		--text-muted: #86868b;
		--card-bg: rgba(255, 255, 255, 0.8);
		--card-border: rgba(0, 0, 0, 0.05);
		--nav-bg: rgba(251, 251, 253, 0.8);
		--fw-light: 300;
		--fw-regular: 400;
		--fw-medium: 500;
		--fw-bold: 700;
		--container-padding: 1.5rem; /* 移动端安全距离 */
    	--container-max-width: 1000px; /* 正文最大宽度 */
    	--safe-area: clamp(20px, 6vw, 80px); /* 全站安全区距离 */
	}

	@media (prefers-color-scheme: dark) {
		:root {
			/* 自动切换深色模式变量 */
			--bg-color: #000000;
			--text-main: #f5f5f7;
			--text-muted: #a1a1a6;
			--card-bg: #1c1c1e;
			--card-border: rgba(255, 255, 255, 0.1);
			--nav-bg: rgba(0, 0, 0, 0.8);
			--fw-light: 300;
			--fw-regular: 400;
			--fw-medium: 500;
			--fw-bold: 700;
			--accent-color: #f7c46c;
			--container-padding: 2.5rem;
		}
	}
	/* 在 Layout.astro 的 <style is:global> 中添加 */
	@font-face {
    	font-family: 'RAGE';
    	src: url('/fonts/RAGE.woff2') format('woff2');
    	font-weight: normal;
    	font-style: normal;
    	font-display: swap;
	}
	@font-face {
        font-family: 'Noto Sans TC Variable';
        src: url('/fonts/NotoSansTC-VF.woff2') format('woff2-supports-variations'),
             url('/fonts/NotoSansTC-VF.woff2') format('woff2');
        font-weight: 100 900;
        font-style: normal;
        font-display: swap;
    }
	@font-face {
        font-family: 'Segoe UI Emoji';
        src: url('/fonts/seguiemj.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }
	html {
		font-family: 'Noto Sans TC Variable', -apple-system, BlinkMacSystemFont, sans-serif;
		background: var(--bg-color);
		color: var(--text-main);
		-webkit-font-smoothing: antialiased;
		transition: background 0.3s ease;
	}
	.logo, .special-heading {
        font-family: 'RAGE', cursive;
        /* RAGE 字体通常较小，可能需要微调大小 */
        font-size: 1.2em; 
    }
	h1, h2, h3 {
		font-weight: var(--fw-bold);
		letter-spacing: -0.02em;
	}
	p {
		font-weight: var(--fw-light); /* 苹果风常在长文本使用较细的字重来营造呼吸感 */
		line-height: 1.6;
	}
	body {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	/* 确保固定 header 不会遮盖内容 */
	main {
		padding-top: 52px; /* 与 .apple-header height 保持一致 */
	}

	/* 全局安全区类 */
	.safe-zone { padding-left: var(--safe-area); padding-right: var(--safe-area); }

	/* 锚点跳转时预留 header 高度 */
	h1, h2, h3 { scroll-margin-top: calc(52px + 1rem); }

	* {
		box-sizing: inherit;
	}

	/* 统一的布局样式 */
	.main-content { background-color: var(--bg-color); overflow-x: hidden; }
	.content-section {
		min-height: 100vh;
		display: flex;
		align-items: center;
		position: relative;
		z-index: 1;
	}

	/* link style for privacy policy, keep normal color */
	a.privacy-link { color: inherit; text-decoration: none; }
	a.privacy-link:hover { text-decoration: underline; }
</style>