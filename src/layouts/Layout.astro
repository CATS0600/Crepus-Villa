---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro Apple Style Blog" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	/* 引入苹果系统默认字体，确保原汁原味的体验 */
	:root {
		--bg-color: #fbfbfd;
		--text-main: #1d1d1f;
		--text-muted: #86868b;
		--card-bg: rgba(255, 255, 255, 0.8);
		--card-border: rgba(0, 0, 0, 0.05);
		--nav-bg: rgba(251, 251, 253, 0.8);
		--fw-light: 300;
		--fw-regular: 400;
		--fw-medium: 500;
		--fw-bold: 700;
	}

	@media (prefers-color-scheme: dark) {
		:root {
			/* 自动切换深色模式变量 */
			--bg-color: #000000;
			--text-main: #f5f5f7;
			--text-muted: #a1a1a6;
			--card-bg: #1c1c1e;
			--card-border: rgba(255, 255, 255, 0.1);
			--nav-bg: rgba(0, 0, 0, 0.8);
			--fw-light: 300;
			--fw-regular: 400;
			--fw-medium: 500;
			--fw-bold: 700;
		}
	}

	html {
		font-family: 'Noto Sans TC Variable';
		/* 确保路径指向你 public/fonts/ 文件夹下的文件 */
		src: url('/fonts/NotoSansTC-VF.woff2') format('woff2-supports-variations'),
		     url('/fonts/NotoSansTC-VF.woff2') format('woff2');
		font-weight: 100 900; /* 关键：声明支持 100 到 900 的所有字重 */
		font-style: normal;
		font-display: swap;
		background: var(--bg-color);
		color: var(--text-main);
		-webkit-font-smoothing: antialiased;
		transition: background 0.3s ease;
	}
	h1, h2, h3 {
		font-weight: var(--fw-bold);
		letter-spacing: -0.02em;
	}
	p {
		font-weight: var(--fw-light); /* 苹果风常在长文本使用较细的字重来营造呼吸感 */
		line-height: 1.6;
	}
	body {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	* {
		box-sizing: inherit;
	}
</style>