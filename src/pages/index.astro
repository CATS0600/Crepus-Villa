---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';

// 模拟博客数据
const posts = [
	{ title: "介绍 Apple Vision Pro 的设计哲学", excerpt: "空间计算时代的第一步...", date: "2026-02-20" },
	{ title: "为什么选择 Astro 构建博客", excerpt: "零 JS，极速体验...", date: "2026-02-18" },
	{ title: "极简主义编程指南", excerpt: "少即是多（Less is more）。", date: "2026-02-15" }
];
---

<Layout title="我的苹果风博客">
	<Header />
	
	<main class="container">
		<section class="hero">
			<h1>创意，<br/>由此开始。</h1>
			<p>分享关于代码、设计与生活的点滴思考。</p>
		</section>

		<section class="bento-grid">
			{posts.map((post) => (
				<article class="bento-card">
					<h3>{post.title}</h3>
					<p>{post.excerpt}</p>
					<span class="date">{post.date}</span>
				</article>
			))}
		</section>
	</main>
</Layout>

<style>
	.container {
		max-width: 1100px; /* 稍微放宽一点，给 Bento 更多发挥空间 */
		margin: 0 auto;
		padding: 100px 20px;
	}

	.bento-grid {
		display: grid;
		/* 创建 3 列响应式网格 */
		grid-template-columns: repeat(3, 1fr);
		grid-auto-rows: 240px; /* 定义基础行高 */
		gap: 20px;
	}

	.bento-card {
		background: var(--card-bg);
		border: 1px solid var(--card-border);
		border-radius: 22px; /* 典型的苹果大圆角 */
		padding: 30px;
		display: flex;
		flex-direction: column;
		justify-content: flex-end;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		overflow: hidden;
		position: relative;
	}

	/* 让第一个卡片占据 2列 x 2行 (大 Banner) */
	.bento-card:nth-child(1) {
		grid-column: span 2;
		grid-row: span 2;
		background: linear-gradient(135deg, #0071e3, #42b4ff); /* 蓝色渐变 */
		color: white;
	}
	
	.bento-card:nth-child(1) .date, 
	.bento-card:nth-child(1) p {
		color: rgba(255, 255, 255, 0.8);
	}

	/* 让第二个卡片占据 1列 x 2行 (纵向长卡片) */
	.bento-card:nth-child(2) {
		grid-row: span 2;
	}

	/* 悬停效果：轻微放大并加深阴影 */
	.bento-card:hover {
		transform: scale(1.015);
		box-shadow: 0 10px 30px rgba(0,0,0,0.1);
	}

	/* 移动端适配：全部变为单列 */
	@media (max-width: 768px) {
		.bento-grid {
			grid-template-columns: 1fr;
			grid-auto-rows: auto;
		}
		.bento-card:nth-child(1),
		.bento-card:nth-child(2) {
			grid-column: span 1;
			grid-row: span 1;
		}
	}
</style>
