---
// src/components/Header.astro
---
<header class="apple-header">
    <nav class="safe-zone">
        <a href="/" class="logo">Crepuscular's Villa</a>
        <div class="links">
            <!-- <a href="/blog">Blog</a> -->
            <a href="/about">About</a>
            <a href="/sponsor">Sponsor</a> </div>
    </nav>
</header>

<style>
    .apple-header {
        position: fixed;
        top: 0;
        width: 100%;
        height: 52px;
        background: rgba(251, 251, 253, 0.8);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        z-index: 1000;
        display: flex;
        justify-content: center;
        border-bottom: 1px solid rgba(0,0,0,0.05);
    }
    nav {
        width: 100%;
        max-width: 1200px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 var(--container-padding, 1.5rem);
    }
    .logo { font-weight: 600; text-decoration: none; color: #1d1d1f; }
    .links { display: flex; gap: 30px; }
    .links a { 
        text-decoration: none; 
        color: #86868b; 
        font-size: 14px; 
        transition: color 0.3s;
    }
    .links a:hover { color: #1d1d1f; }
    @media (max-width: 640px) {
        nav {
            justify-content: flex-start;
            position: relative;
        }
        .logo {
            text-align: left;
            margin-right: 0;
        }
        .links {
            position: static;
            margin-left: auto;
            display: flex;
            gap: 16px;
            align-items: center;
        }
        .links a { font-size: 13px; }
    }
</style>

<script is="client:load">
let clickTimes = [];
const logoLink = document.querySelector('.logo');
if (logoLink) {
  logoLink.addEventListener('click', (e) => {
    const now = Date.now();
    clickTimes.push(now);
    // keep only clicks within last 10 seconds
    clickTimes = clickTimes.filter(ts => now - ts <= 10000);
    if (clickTimes.length > 10) {
      e.preventDefault();
      alert('Bro you should get a job');
      window.location.href = 'https://www.bing.com';
    }
  });
}
</script>